<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="DisplayStyle">
        <item name="android:textColor">@color/displayColor</item>
        <item name="android:textSize">@dimen/displaySize</item>
    </style>
    <style name="ButtonStyle">
        <item name="android:background">@color/buttonBackground</item>
        <item name="android:layout_marginEnd">@dimen/buttonMargin</item>
    </style>
</resources>
